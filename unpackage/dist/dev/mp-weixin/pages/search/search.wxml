<view class="content"><view class="top-bar"><view class="search-div"><image class="search-img" src="../../static/images/search.png"></image><input class="search" type="search" placeholder="搜索用户/群" placeholder-style="color:#aaa;font-weight:400;" data-event-opts="{{[['input',[['search',['$event']]]]]}}" bindinput="__e"/></view><view class="top-bar-right"><view data-event-opts="{{[['tap',[['backOne',['$event']]]]]}}" class="text" bindtap="__e">取消</view></view></view><view class="main"><view class="search-user result"><block wx:if="{{userarr.length>0}}"><view class="title">用户</view></block><block wx:for="{{userarr}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="list user"><navigator url="{{'../userhome/userhome?id='+item._id}}"><image src="{{item.imgurl}}"></image></navigator><view class="names"><view class="name"><rich-text nodes="{{item.name}}"></rich-text></view><view class="email"><rich-text nodes="{{item.email}}"></rich-text></view></view><block wx:if="{{item.tip==1}}"><view data-event-opts="{{[['tap',[['toChatRoom',['$0'],[[['userarr','',index]]]]]]]}}" class="right-bt send" bindtap="__e">发消息</view></block><block wx:if="{{item.tip==0}}"><view data-event-opts="{{[['tap',[['addFriendBtn',['$0'],[[['userarr','',index,'_id']]]]]]]}}" class="right-bt add" bindtap="__e">加好友</view></block></view></block></view></view><view class="modify" style="{{'bottom:'+(-modifyHeight+'px')+';'}}" animation="{{animationData}}"><view class="modify-header"><view data-event-opts="{{[['tap',[['modify',['$event']]]]]}}" class="close" bindtap="__e">取消</view><view class="title">添加好友</view><view data-event-opts="{{[['tap',[['addSubmit',['$event']]]]]}}" class="define" bindtap="__e">确定</view></view><view class="modify-main"><textarea data-event-opts="{{[['input',[['__set_model',['','msg','$event',[]]]]]]}}" class="modify-content" value="{{msg}}" bindinput="__e"></textarea></view></view></view>